{
  "enabledManagers": ["dockerfile", "tekton"],
  "dockerfile": {
    "enabled": true,
    "ignoreTests": true,
    "automergeType": "pr",
    "automerge": true
  },
  "tekton": {
    "enabled": true,
    "fileMatch": ["\\.yaml$", "\\.yml$"],
    "automergeType": "pr",
    "ignoreTests": true,
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchFileNames": ["config/base/params.env", "\\\\.env$"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "pr",
      "platformAutomerge": true
    }
  ]
}
