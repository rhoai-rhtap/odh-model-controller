{
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["config/base/params.env"],
      "matchStrings": [
        "^(?<depName>[^\\s]+)\\s*=\\s*(?<currentValue>[^\\s]+)"
      ],
      "depNameTemplate": "custom.registry/newImage",
      "autoReplaceStringTemplate": "{{{depName}}}={{{newValue}}}",
      "datasourceTemplate": "docker"
    }
  ],
  "enabledManagers": ["dockerfile"],
  "dockerfile": {
    "enabled": true,
    "ignoreTests": true,
    "automergeType": "pr",
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchFileNames": ["config/base/params.env"],
      "extends": [":semanticCommitTypeAll(chore)"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "ignorePaths": ["**/node_modules/**", "**/bower_components/**"]
}
