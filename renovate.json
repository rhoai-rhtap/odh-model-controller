{
  "enabledManagers": ["containerfile", "tekton"],
  "containerfile": {
    "enabled": true,
    "ignoreTests": true,
    "automergeType": "pr",
    "automerge": true
  },
  "tekton": {
    "enabled": true,
    "fileMatch": ["\\.yaml$", "\\.yml$"],
    "automergeType": "pr",
    "ignoreTests": true,
    "automerge": true
  },
  "packageRules": [
    {
      "paths": ["config/base/params.env"],
      "matchPaths": ["config/base/params.env"],
      "automerge": true,
      "ignoreTests": true,
      "automergeType": "branch-push",
      "prPriority": 1
    }  
  ]
}
