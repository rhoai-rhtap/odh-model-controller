{
  "enabledManagers": ["dockerfile"],
  "dockerfile": {
    "enabled": true,
    "ignoreTests": true,
    "automergeType": "pr",
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "matchFileNames": ["config/base/params.env"],
      "enabled": true,
      "automerge": true,
      "automergeType": "pr",
      "ignoreTests": true
    }
  ],
  "ignorePaths": ["**/node_modules/**", "**/bower_components/**"]
}
