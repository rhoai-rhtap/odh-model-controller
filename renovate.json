{
  "enabledManagers": ["dockerfile", "tekton"],
  "dockerfile": {
    "enabled": true,
    "ignoreTests": true,
    "automergeType": "pr",
    "automerge": true,
    "platformAutomerge": true
  },
  "tekton": {
    "enabled": true,
    "fileMatch": [".yaml$", ".yml$"],
    "automergeType": "pr",
    "ignoreTests": true,
    "automerge": true,
    "platformAutomerge": true
  },
  "packageRules": [
    {
      "description": "chore(deps): update caikit-nlp-test",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "pr"
    }
  ]
}
